---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import profilePic from "../assets/profile.jpg";
import Project from "../components/Project.astro";

import { getCollection } from "astro:content";

// Get all entries from a collection.
// Requires the name of the collection as an argument.
// Example: retrieve `src/content/blog/**`
const allProject = await getCollection("projects");
---

<Layout title="Sim Ho">
  <main
    class="overflow-x-auto flex p-5 flex-col w-full h-full justify-between gap-10 items-center"
  >
    <div
      class="flex w-full flex-col-reverse items-center md:flex-row justify-evenly max-w-6xl"
    >
      <section class="flex flex-col gap-y-3 items-center">
        <div class="text-center flex-col flex">
          <h2 class="text-4xl font-extrabold">Projects</h2>
          <p class="text-slate-400">Click to expand</p>
        </div>

        <div class="grid lg:grid-cols-2 gap-4 text-center">
          {
            allProject.map((project) => (
              <Project
                title={project.data.title}
                ref={project.slug}
                img={project.data.headerImage}
              >
                <p class="text-balance">{project.data.summary}</p>
              </Project>
            ))
          }
        </div>
      </section>

      <div
        class="gap-y-1 items-center flex flex-col h-fit border-slate-800 p-3 rounded-xl md:bg-slate-900 md:border w-full md:w-56 lg:w-64"
      >
        <Image
          src={profilePic}
          alt="Profile pic"
          height={180}
          class="rounded-lg"
        />
        <div class="flex items-center sm:items-start flex-col gap-y-2">
          <p class="text-xl font-semibold">Hi! I'm Ho Sim.</p>

          <p class="flex flex-col text-center sm:text-start text-balance">
            I'm a full-stack software developer, and a freelance Korean-English
            translator, studying Computer Science at University of Central
            Florida.
          </p>
          <p class="flex flex-col text-center sm:text-start text-balance">
            I build projects on the side to solve minor, sometimes major
            problems I recognize.
          </p>
          <a href="" class="font-semibold text-indigo-300">Learn more</a>
        </div>
      </div>
    </div>

    <section class="w-full flex items-center flex-col gap-y-5 max-w-4xl">
