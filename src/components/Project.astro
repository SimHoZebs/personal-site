---
interface Props {
  textIcon?: string;
  title?: string;
}

const { props } = Astro;
---

<div
  class="justify-center items-center rounded-xl border-slate-800 px-3 py-3 border max-w-xs gap-2 flex flex-col"
>
  <div class="flex gap-x-2 items-center">
    {
      props.textIcon ? (
        <div class="p-2 text-sm rounded-lg bg-slate-800 text-slate-400">
          {props.textIcon}
        </div>
      ) : null
    }
    {props.title ? <h3 class="text-xl font-bold">{props.title}</h3> : null}
    <slot name="heading" />
  </div>
  <slot />
</div>
