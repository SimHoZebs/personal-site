---
import { Image } from "astro:assets";
interface Props {
  textIcon?: string;
  title?: string;
  ref: string;
  img?: ImageMetadata;
  alt?: string;
}

const { props } = Astro;
---

<a
  class="text-zinc-200 sm:min-w-[20rem] rounded-xl border-stone-700 px-5 py-3 border w-xs gap-3 flex flex-col transition-all hover:scale-105 hover:border-stone-600"
  href={"/projects/" + props.ref}
  transition:name={props.title + " bg"}
>
  <div class="flex gap-x-4">
    {
      props.textIcon ? (
        <div class="p-2 aspect-square text-sm rounded-lg bg-slate-800 text-slate-400">
          {props.textIcon}
        </div>
      ) : null
    }

    <h2
      id={props.title}
      class="text-3xl font-bold text-zinc-300"
      transition:name={props.title}
    >
      {props.title}
    </h2>
  </div>

  <slot />
</a>
